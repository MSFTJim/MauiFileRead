<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFileRead.AboutButton"
             Title="AboutButton">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to the About Button Page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button x:Name="ReadFile" Text="Read File" 
                    FontSize="18" 
                    Clicked="ReadFile_Click" 
                    HorizontalOptions="FillAndExpand" 
                    VerticalOptions="Center"                    
                    Padding="10"
                    Margin="35,0,35,0"/>
    </VerticalStackLayout>
</ContentPage>